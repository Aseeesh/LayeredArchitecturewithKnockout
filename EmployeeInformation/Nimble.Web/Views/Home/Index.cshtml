@section Scripts {
<script src="~/Scripts/ViewModles/JavaScript.js"></script>
<script type="text/javascript">
    $(function () {
        var modelbox = function () {
            $("#modalbox").modal("show");
        };
        $("#btnaddperson").on('click', modelbox);

    });

</script>
<script id="customMessageTemplate" type="text/html">
    <em class="customMessage" data-bind='validationMessage: field'></em>
</script>
    }
 

<div class="container">

    <br /><br />

    <input type="button" id="btnaddperson" class="btn btn-small btn-primary" value="Add Employee" data-bind="click:add"  />

    <hr />
    <div class="panel panel-default pre-scrollable">
        <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>MobileNo</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:Persons">
                <tr>
                    <td>
                        <span data-bind="text:Id"></span>
                    </td>
                    <td>
                        <span data-bind="text:FirstName"></span>
                    </td>
                    <td>
                        <span data-bind="text:LastName"></span>
                    </td>
                    <td>
                        <span data-bind="text:DOB"></span>
                    </td>
                  
                    <td>
                        <button class="btn glyphicon glyphicon-pencil" data-bind="click:$root.getSelected" />
                    </td>
                    <td>
                        <button class="glyphicon glyphicon-trash" data-bind="click:$root.delete" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div id="modalbox" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1>Register Employee</h1>
                </div>
                <div class="modal-body">
                    <fieldset>
                        <legend>User: <span data-bind='text: errors().length'></span> errors</legend>
                        </fieldset>
                    <div class="tabbable">
                        <!-- Only required for left/right tabs -->
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab1" data-toggle="tab">Personal</a></li>
                            <li><a href="#tab2" data-toggle="tab">Salary</a></li>
                            <li><a href="#tab3" data-toggle="tab"> Address</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2">
                                            Name:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:FirstName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            Father's   Name:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:LastName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            DOB:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:DOB" class="form-control" />
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab2">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2">
                                            Basic:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:Basic" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            Allowance:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:Allowance" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            Communication:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:Communication" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab3">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2">
                                            PermanentCountry:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:PermanentCountry" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            PermanentCity:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:PermanentCity" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            PermanentState:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:PermanentState" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            PermanentStreet:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:PermanentStreet" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            CurrentCountry:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:CurrentCountry" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            CurrentCity:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:CurrentCity" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            CurrentState:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:CurrentState" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            CurrentStreet:
                                        </div>
                                        <div class="col-md-10">

                                            <input type="text" data-bind="value:CurrentStreet" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                     
</div>
                <div class="modal-footer">
                  
                    <button class="btn btn-primary" data-bind="click:save">Ok</button><button class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


</div>
